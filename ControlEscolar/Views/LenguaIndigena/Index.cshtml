@model IEnumerable<Lenguaindigena>

@section Title
{
    Lenguas indígenas
}
<div class="w-full md:w-full xl:w-1/3 p-6">
    <!--Metric Card-->
    <div class="bg-gradient-to-b from-indigo-200 to-indigo-100 border-b-4 border-indigo-500 rounded-lg shadow-xl p-5">
        <div class="flex flex-row items-center">
            <table class="w-full md:w-full">
                <thead>
                    <tr class="bg-white text-gray-700 text-uppercase">
                        <th class="text-left py-3 px-5">Clave</th>
                        <th class="text-left py-3 px-5">Descripción</th>
                        <th class="text-left py-3 px-5">Nombre corto</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var lengua in Model)
                    {
                    <tr class="border-b border-gray-200 hover:bg-gray-100">
                        <td class="py-3 px-5 text-left">@lengua.Clave</td>
                        <td>@lengua.Descripcion</td>
                        <td>@lengua.NombreCorto</td>
                    </tr>
                    }
                    
                </tbody>
            </table>
        </div>
    </div>
    <!--/Metric Card-->
</div>
